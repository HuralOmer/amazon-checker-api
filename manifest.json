{
  "manifest_version": 3,
  "name": "Amazon Ürün Kontrolcüsü",
  "version": "1.0",
  "description": "Amazon ürünlerini farklı marketlerde kontrol edin",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.onrender.com/*",
    "https://*.amazon.com.tr/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
  }
